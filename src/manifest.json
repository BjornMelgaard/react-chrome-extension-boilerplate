{
  "name": "Nuuz",
  "version": "1.0",
  "description": "Nuuz",
  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Nuuz",
    "default_icon": "icon128.png",
    "default_popup": "popup/index.html"
  },
  "minimum_chrome_version": "33",
  "permissions": ["http://localhost:3000/*", "identity", "tabs"],
  "manifest_version": 2,
  "content_security_policy":
    "script-src 'self' https://ajax.googleapis.com https://cdnjs.cloudflare.com https://ajax.microsoft.com; object-src 'self'"
}
